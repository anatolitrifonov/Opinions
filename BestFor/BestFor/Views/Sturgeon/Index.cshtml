@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model BestFor.Sturgeon.TeamsModel
@{
    Layout = "_SturgeonLayout.cshtml";
    ViewData["Title"] = "Addathon Ironman Sturgeon Derby Teams Standings";
}
<h2>Teams Standings</h2>
<table class="score_table">
    <tr><th>Team</th><th>Score</th></tr>
    @foreach (var team in Model.Teams)
    {
        <tr>
            <td>
                <a asp-controller="Sturgeon" asp-action="Team" asp-route-id="@team.TeamName">@team.TeamName</a>
            </td>
            <td>
                @team.Score
            </td>
        </tr>
    }
</table>